<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_email_or_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:layout_marginTop="36dp"
        android:textColorHint="@color/primary">

        <net.aungpyaephyo.mmtextview.components.MMEditText
            android:id="@+id/ed_mail_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email or Phone *" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_ed_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/input_email_or_phone"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:layout_marginTop="16dp"
        android:textColorHint="@color/primary">

        <net.aungpyaephyo.mmtextview.components.MMEditText
            android:id="@+id/ed_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_visibility_primary_24dp"
            android:hint="Password *"
            android:inputType="textPassword" />
    </android.support.design.widget.TextInputLayout>

    <net.aungpyaephyo.mmtextview.components.MMButton
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/input_ed_password"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:layout_marginTop="16dp"
        android:background="@color/primary"
        android:foreground="@drawable/ripple_white"
        android:text="Login"
        android:textAllCaps="false"
        android:textColor="@color/white_full" />

    <net.aungpyaephyo.mmtextview.components.MMButton
        android:id="@+id/btn_login_google"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_login"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:layout_marginTop="16dp"
        android:background="@color/primary"
        android:foreground="@drawable/ripple_white"
        android:text="Login with google"
        android:textAllCaps="false"
        android:textColor="@color/white_full" />

    <net.aungpyaephyo.mmtextview.components.MMTextView
        android:id="@+id/btn_forget_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/btn_login"
        android:layout_below="@id/btn_login_google"
        android:layout_marginTop="24dp"
        android:foreground="@drawable/ripple_primary"
        android:padding="8px"
        android:text="@string/btn_forgot_password"
        android:textColor="@color/primary" />

    <View
        android:id="@+id/v_separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/btn_forget_password"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="36dp"
        android:layout_marginTop="36dp"
        android:background="#aaa" />

    <net.aungpyaephyo.mmtextview.components.MMTextView
        android:id="@+id/btn_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/v_separator"
        android:layout_below="@id/v_separator"
        android:layout_marginTop="24dp"
        android:foreground="@drawable/ripple_primary"
        android:padding="8px"
        android:text="@string/btn_seller"
        android:textColor="@color/primary" />
</RelativeLayout>