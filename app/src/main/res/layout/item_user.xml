<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/user_profile"
        android:layout_width="@dimen/app_icon_width"
        android:layout_height="@dimen/app_icon_height"
        android:layout_margin="@dimen/margin_medium"
        android:src="@drawable/dummy_user_picture" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_medium"
        android:layout_toRightOf="@id/user_profile"
        android:fontFamily="sans-serif-condensed"
        android:text="Myat Noe"
        android:textColor="@color/primary_text"
        android:textSize="@dimen/text_regular_3x" />

    <TextView
        android:id="@+id/tv_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_name"
        android:layout_below="@id/tv_name"
        android:layout_marginTop="@dimen/margin_small"
        android:fontFamily="sans-serif-condensed"
        android:text="+95 997 9599 035"
        android:textColor="@color/primary_text"
        android:textSize="@dimen/text_regular_3x" />

    <TextView
        android:id="@+id/tv_time_stamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_name"
        android:layout_below="@id/tv_phone"
        android:layout_marginTop="@dimen/margin_small"
        android:fontFamily="sans-serif-condensed"
        android:text="12:00"
        android:textColor="@color/secondary_text"
        android:textSize="@dimen/text_regular_3x" />
</RelativeLayout>