<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    app:cardElevation="4dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="200dp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_international_topic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/internationalOtherTopic"
            android:maxLines="4"
            android:layout_marginLeft="8dp"
            android:textSize="20sp"
            android:textColor="@color/secondary_text"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/posted_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_international_topic"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:drawableLeft="@drawable/ic_access_time_black_24dp"
            android:text="34m"
            android:textColor="@color/secondary_text"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/iv_international_news"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@id/posted_time"
            android:scaleType="fitXY"
            android:src="@drawable/ball" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
