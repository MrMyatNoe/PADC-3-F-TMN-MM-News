<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content
">

    <ImageView
        android:id="@+id/iv_app_icon"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="@dimen/margin_medium"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tv_add_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_medium"
        android:layout_toRightOf="@id/iv_app_icon"
        android:fontFamily="sans-serif-condensed"
        android:text="@string/add_comment"
        android:textSize="@dimen/text_heading_1x" />

    <ImageView
        android:id="@+id/iv_close_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:foreground="@drawable/ripple_primary"
        android:padding="@dimen/margin_medium"
        android:src="@drawable/ic_cancel_black_36dp" />

    <android.support.design.widget.TextInputEditText
        android:id="@+id/tied_new_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_app_icon"
        android:layout_margin="@dimen/margin_medium"
        android:hint="@string/add_comment">


    </android.support.design.widget.TextInputEditText>

    <Button
        android:id="@+id/btn_add_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/tied_new_comment"
        android:layout_margin="@dimen/margin_medium"
        android:text="Add comment" />
</RelativeLayout>