<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cd_id"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="4dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rl_international_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primary">

            <TextView
                android:id="@+id/tv_international_topic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:drawableLeft="@drawable/soccer_title"
                android:text="OK"
                android:textColor="@color/white_full"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_international_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_toRightOf="@id/tv_international_topic"
                android:maxLines="3"
                android:text="@string/internationalTitle"
                android:textColor="@color/secondary_text"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/posted_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_international_topic"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="32dp"
                android:drawableLeft="@drawable/ic_access_time_black_24dp"
                android:text="34m"
                android:textColor="@color/secondary_text"
                android:textSize="20sp" />

            <View
                android:id="@+id/v_separator"
                android:layout_width="1dp"
                android:layout_height="25dp"
                android:layout_below="@id/tv_international_title"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@id/posted_time"
                android:background="@color/divider" />

            <TextView
                android:id="@+id/tv_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_international_title"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@id/v_separator"
                android:drawableLeft="@drawable/ic_chat_bubble_outline_black_24dp"
                android:text="778"
                android:textColor="@color/primary_text" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_international_news"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_below="@id/rl_international_details"
            android:scaleType="fitXY"
            android:src="@drawable/ball" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_international_news_topic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_international_news" />

        <LinearLayout
            android:id="@+id/ll_other_international_news"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rv_international_news_topic"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    app:cardElevation="4dp">

                    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="200dp"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/tv_international_topic_one"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/internationalOtherTopic"
                            android:maxLines="4"
                            android:layout_marginLeft="8dp"
                            android:textSize="20sp"
                            android:textColor="@color/secondary_text"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/posted_time_one"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_international_topic_one"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="8dp"
                            android:drawableLeft="@drawable/ic_access_time_black_24dp"
                            android:text="34m"
                            android:textColor="@color/secondary_text"
                            android:textSize="20sp" />

                        <ImageView
                            android:id="@+id/iv_international_news_one"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:layout_below="@id/posted_time_one"
                            android:scaleType="fitXY"
                            android:src="@drawable/ball" />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    app:cardElevation="4dp">

                    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="200dp"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/tv_international_topic_two"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/internationalOtherTopic"
                            android:maxLines="4"
                            android:layout_marginLeft="8dp"
                            android:textSize="20sp"
                            android:textColor="@color/secondary_text"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/posted_time_two"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_international_topic_two"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="8dp"
                            android:drawableLeft="@drawable/ic_access_time_black_24dp"
                            android:text="34m"
                            android:textColor="@color/secondary_text"
                            android:textSize="20sp" />

                        <ImageView
                            android:id="@+id/iv_international_news_two"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:layout_below="@id/posted_time_two"
                            android:scaleType="fitXY"
                            android:src="@drawable/ball" />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>
            </FrameLayout>
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>
